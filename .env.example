GITHUB_TOKEN=your_github_token_here

POSTGRES_USER=app
POSTGRES_PASSWORD=changeme
POSTGRES_DB=appdb
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}

REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_password

# SCC execution mode:
#  - 1 = use local scc binary inside app image
#  - 0 = run scc via docker image (needs docker socket mounted and docker-cli)
USE_LOCAL_SCC=0

# Для отладки: сохранить рабочую директорию после анализа
KEEP_WORKDIR=0

# По умолчанию — сколько результатов возвращать (github search)
SEARCH_MAX_RESULTS=500